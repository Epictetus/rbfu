#!/usr/bin/env bash
. "$(dirname $0)/../libexec/rbfu-common"

VERSION=$1

# sanity checks
[[ $VERSION ]] || halt "Please specify Ruby version to install."
command_exists ruby-build || halt "Please install ruby-build: https://github.com/sstephenson/ruby-build"

# install requested Ruby version
CMD="ruby-build $VERSION $HOME/.rbfu/rubies/$VERSION"
echo "Executing: $CMD"
$CMD
